<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="POST">

      <div class="mb-3">
        <label class="from-label" for="title">Title</label>
        <!-- setting name to group input data into campground -->
        <input class="form-control" type="text" name="campground[title]" id="title">
      </div>

      <div class="mb-3">
        <label class="from-label" for="location">Location</label>
        <input class="form-control" type="text" name="campground[location]" id="location">
      </div>

      <div class="mb-3">
        <label class="from-label" for="image">Image Url</label>
        <input class="form-control" type="text" name="campground[image]" id="image">
      </div>

      <div class="mb-3">
        <label for="price" class="from-label">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input id="price" name="campground[price]" type="text" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label">
        </div>
      </div>

      <div class="mb-3">
        <label class="from-label" for="description">Description</label>
        <textarea class="form-control" type="text" name="campground[description]" id="description"></textarea>
      </div>

      <div class="mb-3"><button class="btn btn-success">Add Campground</button></div>
    </form>
    <a href="/campgrounds">All Campgrounds</a>
  </div>
</div>
<% layout('layouts/boilerplate') %>